doctype html
html
    head
        if title
            title= title
        else
            title Neumont Group Network
        link(rel="stylesheet", type="text/css", href="/css/style.css")
        link(rel="stylesheet", type="text/css", href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Lato:400,700,900|Oswald:400,700")
        script(src="/js/angular.min.js")
        script(src="/js/app.js")
        script(src="/js/controllers/messageCtrl.js")

    body
        header
            a(class="logo" href="http://localhost:3000/") 
                span(class="logo-text") Neumont Group Network
            include ./partials/header-signedin.jade
        main(class="bodyContent")
            section(class="breadcrumb")
            h1(class="pageTitle")= title
            p(class="message") #{message}
            p(class="errorMessage") #{errorMessage}
            block content

            if user
                section(ng-app="messager")
                    section(class="messageCtrlSection", ng-controller="messageCtrl", ng-init="setUser(#{JSON.stringify(user)})")
                        section(class="recentMessages")
                            input(type="button", ng-click="getAllConversations()", value="Refresh")
                            input(type="button" ng-click="getUser()" value="Get User")
                            h3 Messages
                            ul(ng-repeat="conversation in conversations")
                                li
                                    p {{ conversation }}
        footer
            p Created 2015, Christian Ramon