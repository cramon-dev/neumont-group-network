extends layout

block content
    h1 #{name}
    
    p #{description}
    
    h4 Members
    if locals.listOfMembers
        each val in listOfMembers
            li= val.username
            
    h4 Events
    if locals.listOfEvents
        each val in listOfEvents
            li 
                a(href="http://localhost:3000/organizations/#{orgId}/events/#{val.event_id}")= val.title
    
    
    a(href="http://localhost:3000/organizations/#{orgId}/edit") Edit Information
    
    a(href="http://localhost:3000/organizations/#{orgId}/events/create") Add Event
    
