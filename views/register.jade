extends layout

block content
    h1 #{title}
        form(action='http://localhost:3000/register', method='post')
            input(type='text', name='register_username', placeholder='Your username')
            input(type='password', name='register_password', placeholder='Your password')
            input(type='text', name='register_email', placeholder='Your email')
            input(type='submit', value='Register')