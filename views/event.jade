extends layout

block content
    h1 #{title}
    h4 Overview
    p #{description}
    h4 Date
    p #{start_date}
            
    form(action="http://localhost:3000/organizations/#{orgId}/events/#{eventId}/comment", method="post")
        p Add a Comment
        input(type="text", name="comment_message")
        input(type="submit", value="Add Comment")
        
    br
    h3 Comments
    if locals.comments
        each comment in comments
            li
                h3= comment.author_username
                p= comment.message
    else
        p No comments found for this event