extends layout

block content
    h1 Create Event
    form(class="eventCreationForm", action="http://localhost:3000/events/create", method="post", enctype="multipart/form-data")
        p Event title:
        input(type="text", name="newEventTitle")
        p Event description:
        input(type="text", name="newEventDesc")
        p Start date (defaults to all day for one day):
        input(type="date", name="newEventStartDate")
        p Can users comment? (This can be changed later.)
        input(type="checkbox", name="canUsersComment")
        input(type="hidden", name="orgId", value="#{orgId}")
        input(type="file", name="eventImage")
        input(type="submit", value="Submit")